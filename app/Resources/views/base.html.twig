{# app/Resources/views/base.html.twig #}

<!DOCTYPE html>
<html>
    <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %} Billetterie {% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
            <link rel="stylesheet" href="{{ asset('billetterie.css') }}">
        {% endblock %}
        
            <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    
    <body>
        <!-- Header -->
        <div id="page-header">
                <img src="{{ asset('logo_Louvre.png') }}" class="img-responsive img-thumbnail" alt="LogoLouvre">
                <p id="titrePage">BILLETTERIE</p>
                <div> <a>F</a> <a>E</a> </div>   
        </div>     
        
        <nav class="navbar navbar-default">
            <nav aria-label="Page navigation">
                <ul class="pager">
                    <li class="active"><a href="#">Sélection date, type et nombre de billet</a></li>
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <li class="disabled"><a href="#" >Renseignements visiteur(s)</a></li>
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <li class="disabled"><a href="#" >Paiement</a></li>
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <li class="disabled"><a href="#" >Confirmation</a></li>
                </ul>
            </nav><!-- /.container -->
        </nav>
    
    {% block body %}
    
    {% endblock %}

    <footer>
        <nav class="navbar navbar-inverse navbar-fixed-bottom">
            <div class="container-fluid text-center">
                <a href="" class="navbar-text" >Mentions Légales</a>
            </div>
        </nav>
    </footer>

  {% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="http://code.jquery.com/jquery-latest.min.js"></script>

  {% endblock %}

</body>
</html>
