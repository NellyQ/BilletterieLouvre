{# app/Resources/views/base.html.twig #}

<!DOCTYPE html>
<html>
    <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %} Billetterie {% endblock %}</title>

        {% block stylesheets %}
            <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
            <link rel="stylesheet" href="{{ asset('billetterie.css') }}">
        {% endblock %}
        
            <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    
    <body>
        <!-- Header -->
        <div id="page-header">
                <div id="titrePage">BILLETTERIE EN LIGNE</div>
        </div>     
        
        <nav class="navbar navbar-inverse">
              <div class="container-fluid">
                <div class="navbar-header">
                  <a class="navbar-brand" href="{{ path('louvre_billetterie_commande')}}"><img src="{{ asset('images/logo_Louvre.png') }}" class="img-responsive" alt="LogoLouvre"></a>
                </div>
                <ul class="nav navbar-nav">
                  <li id="commande" class="active"><a> 1 - Commande </a></li>  
                  <li id="renseignements" class="disabled"><a> 2 - Renseignements visiteur(s)</a></li>
                  <li id="paiement" class="disabled"><a> 3 - Paiement</a></li>
                  <li id="confirmation" class="disabled"><a> 4 - Confirmation </a></li>
                </ul>
              </div>
        </nav>
    {% block body %}
    
    {% endblock %}

    <footer>
        
        <nav class="navbar navbar-inverse navbar-fixed-bottom">
            <div class="container-fluid text-center">
                <p><a href="{{ path('louvre_billetterie_tarifs')}}">Tarifs</a> - <a href="{{ path('louvre_billetterie_mentions')}}">Mentions Légales</a> - <a href="mailto:nelly.quesada@orange.fr">Contact</a></p>
                <p>Ce site, fictif, est réalisé dans le cadre d'une formation OpenClassrooms. Ceci n'est pas la billetterie officielle du Louvre</p>
            </div>
        </nav>
    </footer>

  {% block javascripts %}
    
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
       
  {% endblock %}

    </body>
</html>
